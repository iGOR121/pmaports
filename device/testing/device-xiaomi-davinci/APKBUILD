# Maintainer: Jens Reidel <adrian@travitia.xyz>
# Reference: <https://postmarketos.org/devicepkg>

pkgname=device-xiaomi-davinci
pkgdesc="Xiaomi Mi 9T / Redmi K20"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-qcom-sm7150
	make-dynpart-mappings
	mesa-dri-gallium
	mkbootimg
	postmarketos-base
	postmarketos-update-kernel
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	modules-initfs
"

subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Firmware for GPU, Audio, Modem, WiFi, etc."
	depends="
		firmware-xiaomi-davinci-adsp
		firmware-xiaomi-davinci-cdsp
		firmware-xiaomi-davinci-gpu
		firmware-xiaomi-davinci-initramfs
		firmware-xiaomi-davinci-ipa
		firmware-xiaomi-davinci-modem
		firmware-xiaomi-davinci-touchscreen
		firmware-xiaomi-davinci-wlan
		linux-firmware-ath10k
		linux-firmware-qca
		linux-firmware-qcom
		msm-modem
		msm-modem-uim-selection
		pd-mapper
		tqftpserv
		"
	mkdir "$subpkgdir"
}

